<UserControl x:Class="ProyectoSauna.UserControlUsuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#14161C">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Izquierdo: Formulario -->
        <Border Grid.Column="0" Background="#1E1E24" CornerRadius="10" Margin="0,0,10,0">
            <StackPanel Margin="20">
                <TextBlock Text="Gestión de Usuarios"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Foreground="White"
                          Margin="0,0,0,20"
                          HorizontalAlignment="Center"/>

                <!-- Formulario de Usuario -->
                <TextBlock Text="Nombre de usuario:" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="txtNombreUsuario"
                        Background="#2A2D34"
                        Foreground="White"
                        BorderBrush="#4CC9F0"
                        BorderThickness="1"
                        Padding="10"
                        FontSize="14"
                        Margin="0,0,0,10"/>

                <TextBlock Text="Contraseña:" Foreground="White" Margin="0,10,0,5"/>
                <PasswordBox x:Name="txtPassword"
                            Background="#2A2D34"
                            Foreground="White"
                            BorderBrush="#4CC9F0"
                            BorderThickness="1"
                            Padding="10"
                            FontSize="14"
                            Margin="0,0,0,10"/>

                <TextBlock Text="Correo electrónico " Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="txtCorreo"
                        Background="#2A2D34"
                        Foreground="White"
                        BorderBrush="#4CC9F0"
                        BorderThickness="1"
                        Padding="10"
                        FontSize="14"
                        Margin="0,0,0,10"/>

                <TextBlock Text="Rol del usuario:" Foreground="White" Margin="0,10,0,5"/>
                <ComboBox x:Name="cmbRol"
                         Background="#2A2D34"
                         Foreground="White"
                         BorderBrush="#4CC9F0"
                         BorderThickness="1"
                         Padding="10"
                         FontSize="14"
                         DisplayMemberPath="nombre"
                         SelectedValuePath="idRol"
                         Margin="0,0,0,10"/>

                <CheckBox x:Name="chkActivo"
                         Content="Usuario activo"
                         IsChecked="True"
                         Foreground="White"
                         Margin="0,10"/>

                <!-- Botones de Acción -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnGuardar"
                           Content="GUARDAR"
                           Style="{StaticResource PrimaryButton}"
                           Click="BtnGuardar_Click"
                           Margin="0,0,10,0"/>

                    <Button x:Name="btnLimpiar"
                           Content="LIMPIAR"
                           Style="{StaticResource SecondaryButton}"
                           Click="BtnLimpiar_Click"
                           Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Panel Derecho: Lista de Usuarios -->
        <Border Grid.Column="1" Background="#1E1E24" CornerRadius="10" Margin="10,0,0,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- ✅ Nueva fila para filtro -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título centrado -->
                <TextBlock Grid.Row="0"
                          Text="Usuarios Registrados"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"/>

                <!-- ✅ AGREGAR: Panel de filtro -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="Mostrar usuarios:" 
                              Foreground="White" 
                              VerticalAlignment="Center" 
                              FontSize="14"
                              Margin="0,0,10,0"/>
                    
                    <ComboBox x:Name="cmbFiltroEstado"
                             Background="#2A2D34"
                             Foreground="White"
                             BorderBrush="#4CC9F0"
                             BorderThickness="1"
                             Padding="8"
                             FontSize="12"
                             Width="120"
                             SelectionChanged="CmbFiltroEstado_SelectionChanged">
                        <ComboBoxItem Content="Activos" IsSelected="True" Tag="activos"/>
                        <ComboBoxItem Content="Inactivos" Tag="inactivos"/>
                        <ComboBoxItem Content="Todos" Tag="todos"/>
                    </ComboBox>
                </StackPanel>

                <!-- DataGrid (ahora en Grid.Row="2") -->
                <DataGrid x:Name="dgUsuarios"
                         Grid.Row="2"
                         Background="#2A2D34"
                         Foreground="White"
                         BorderBrush="#4CC9F0"
                         BorderThickness="1"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         CanUserReorderColumns="False"
                         CanUserResizeColumns="True"
                         CanUserResizeRows="False"
                         CanUserSortColumns="True"
                         IsReadOnly="True"
                         HeadersVisibility="Column"
                         GridLinesVisibility="None"
                         SelectionMode="Single"
                         SelectionUnit="FullRow"
                         FocusVisualStyle="{x:Null}"
                         RowHeight="40"
                         SelectionChanged="DgUsuarios_SelectionChanged">

                    <!-- Estilos para alineación -->
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#2A2D34"/>
                            <Setter Property="Height" Value="40"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3A3D44"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4CC9F0"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>

                    <!-- Columnas con alineación y botones originales -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding idUsuario}" Width="50">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Usuario" Binding="{Binding nombreUsuario}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Correo" Binding="{Binding correo}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Rol" Binding="{Binding idRolNavigation.nombre}" Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridCheckBoxColumn Header="Activo" Binding="{Binding activo}" Width="80">
                            <DataGridCheckBoxColumn.ElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="IsEnabled" Value="False"/>
                                </Style>
                            </DataGridCheckBoxColumn.ElementStyle>
                        </DataGridCheckBoxColumn>

                        <DataGridTextColumn Header="Fecha Creación" Binding="{Binding fechaCreacion, StringFormat=dd/MM/yyyy}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Botones de acción visibles - CORREGIDO -->
                        <DataGridTemplateColumn Header="Acciones" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center">
                                        <Button Content="✏️" 
                                               ToolTip="Editar"
                                               Click="BtnEditar_Click"
                                               Background="#4CC9F0"
                                               Foreground="White"
                                               BorderThickness="0"
                                               Cursor="Hand"
                                               Width="28"
                                               Height="28"
                                               FontSize="12"
                                               Margin="3">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#4CC9F0"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                       CornerRadius="4"
                                                                       BorderThickness="0">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#3A9BCF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter Property="Background" Value="#2E7A9A"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <Button Content="🗑️"
                                               ToolTip="Eliminar"
                                               Click="BtnEliminar_Click"
                                               Background="#E74C3C"
                                               Foreground="White"
                                               BorderThickness="0"
                                               Cursor="Hand"
                                               Width="28"
                                               Height="28"
                                               FontSize="12"
                                               Margin="3">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#E74C3C"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                       CornerRadius="4"
                                                                       BorderThickness="0">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#C0392B"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter Property="Background" Value="#A93226"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

