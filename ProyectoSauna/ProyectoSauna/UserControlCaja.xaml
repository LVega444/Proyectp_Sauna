<UserControl x:Class="ProyectoSauna.UserControlCaja"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#14161C">
    <Grid Margin="30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White">
            <materialDesign:PackIcon Kind="CashRegister" Width="60" Height="60" Foreground="#4CC9F0" HorizontalAlignment="Center"/>
            <TextBlock Text="Módulo de Caja" FontSize="28" FontWeight="SemiBold" Margin="0,10,0,5" HorizontalAlignment="Center"/>
            <TextBlock Text="Administra la caja diaria, movimientos y arqueos en el sistema." 
                       FontSize="16" Foreground="#9CA3AF" TextAlignment="Center" MaxWidth="600" />
        </StackPanel>
    </Grid>
</UserControl>