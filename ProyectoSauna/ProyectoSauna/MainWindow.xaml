<Window x:Class="ProyectoSauna.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Panel Administrativo - Sauna Kalixto"
        Height="938" Width="1700"
        WindowStartupLocation="CenterScreen"
        Background="#14161C"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== SIDEBAR ===== -->
        <Border Grid.Column="0"
                Background="#1C1F26"
                BorderBrush="#292C33"
                BorderThickness="0,0,1,0">
            <StackPanel Margin="0,15,0,0">

                <!-- Branding -->
                <TextBlock Text="SAUNA KALIXTO"
                           FontSize="17"
                           FontWeight="Bold"
                           Foreground="#4CC9F0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,2"/>
                <TextBlock Text="Panel Administrativo"
                           FontSize="10"
                           Foreground="#7B8494"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- OPERACIONES -->
                <TextBlock Text="OPERACIONES"
                           FontSize="10"
                           FontWeight="SemiBold"
                           Foreground="#5A6475"
                           Margin="15,0,0,3"/>

                <StackPanel x:Name="MenuOperaciones" Margin="0,0,0,8">
                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Width="180">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="AccountPlusOutline" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Entradas y Consumos" Foreground="White" FontSize="11" Width="115"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="CreditCardOutline" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Pagos y Comprobantes" Foreground="White" FontSize="11"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="AccountGroupOutline" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Clientes" Foreground="White" FontSize="11"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Border Height="1" Margin="15,4" Background="#2E3139"/>

                <!-- FINANZAS E INVENTARIO -->
                <TextBlock Text="FINANZAS E INVENTARIO"
                           FontSize="10"
                           FontWeight="SemiBold"
                           Foreground="#5A6475"
                           Margin="15,6,0,3"/>

                <StackPanel x:Name="MenuFinanzas" Margin="0,0,0,8">
                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="CashRegister" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Caja y Flujo de Caja" Foreground="White" FontSize="11"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="Warehouse" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Inventario" Foreground="White" FontSize="11"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="CashMinus" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Egresos" Foreground="White" FontSize="11"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Border Height="1" Margin="15,4" Background="#2E3139"/>

                <!-- REPORTES -->
                <TextBlock Text="REPORTES"
                           FontSize="10"
                           FontWeight="SemiBold"
                           Foreground="#5A6475"
                           Margin="15,6,0,3"/>

                <StackPanel x:Name="MenuReportes" Margin="0,0,0,8">
                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="ChartLineVariant" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Reportes y Estadísticas" Foreground="White" FontSize="11"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Border Height="1" Margin="15,4" Background="#2E3139"/>

                <!-- CONFIGURACIÓN -->
                <TextBlock Text="CONFIGURACIÓN"
                           FontSize="10"
                           FontWeight="SemiBold"
                           Foreground="#5A6475"
                           Margin="15,6,0,3"/>

                <StackPanel x:Name="MenuConfiguracion" Margin="0,0,0,8">
                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="AccountCogOutline" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Usuarios" Foreground="White" FontSize="11"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click">
                        <StackPanel Orientation="Horizontal" Margin="8,1">
                            <materialDesign:PackIcon Kind="GiftOutline" Width="14" Height="14" Foreground="#4CC9F0" Margin="0,0,5,0"/>
                            <TextBlock Text="Promociones" Foreground="White" FontSize="11"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Border Height="1" Margin="15,6" Background="#2E3139"/>

                <!-- Footer -->
                <TextBlock Text="Versión 1.0.0"
                           FontSize="9"
                           Foreground="#555"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,2"/>

                <Button x:Name="BtnSalir"
                        Click="BtnSalir_Click"
                        Margin="25,4,25,10"
                        Padding="5,2"
                        Background="#D62828"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Height="51"
                        ToolTip="Cerrar el sistema">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="LogoutVariant" Width="12" Height="12" Foreground="White" Margin="0,0,3,0"/>
                        <TextBlock Text="Salir"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- ===== CONTENIDO PRINCIPAL ===== -->
        <Grid Grid.Column="1">
            <!-- Encabezado -->
            <Border Background="#181A20"
                    Height="38"
                    VerticalAlignment="Top"
                    BorderBrush="#222"
                    BorderThickness="0,0,0,1">
                <DockPanel Margin="12,0">
                    <TextBlock x:Name="TituloModulo"
                               Text="Panel de Control"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"/>
                </DockPanel>
            </Border>

            <!-- Contenido dinámico -->
            <ContentControl x:Name="ContenidoPrincipal"
                            Margin="20,55,20,20"/>

            <!-- Bienvenida -->
            <Grid x:Name="PantallaBienvenida"
                  Background="#14161C"
                  Opacity="0.97"
                  Margin="0,38,0,0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border Background="#1C1F26"
                            CornerRadius="10"
                            Padding="30"
                            Effect="{DynamicResource DropShadowEffect}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="👋 Bienvenido al Panel de Control"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#4CC9F0"
                                       TextAlignment="Center"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="SAUNA KALIXTO"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#A9B1C1"
                                       TextAlignment="Center"
                                       Margin="0,0,0,3"/>
                            <TextBlock Text="Gestione todas las operaciones, finanzas y control desde un solo lugar."
                                       FontSize="11"
                                       Foreground="#7B8494"
                                       TextAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>

